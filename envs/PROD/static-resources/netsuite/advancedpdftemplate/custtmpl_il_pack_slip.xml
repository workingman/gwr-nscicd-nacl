<?xml version="1.0"?><!DOCTYPE pdf PUBLIC "-//big.faceless.org//report" "report-1.1.dtd">
<pdf>
<#assign tmplInclData = companyInformation.custrecord_il_advtmpl_incldata?eval>

<#-- Include Functions -->
<#if tmplInclData?has_content && tmplInclData.func?has_content><#include "${tmplInclData.func}"></#if>

<#-- Include Initialize -->
<#if tmplInclData?has_content && tmplInclData.init?has_content><#include "${tmplInclData.init}"></#if>

<#assign
	BODY_FIELDS = [
		"createdfrom"
	]
>

<head>
	<#-- Include Head Tag -->
	<#if tmplInclData?has_content && tmplInclData.taghead?has_content><#include "${tmplInclData.taghead}"></#if>
</head>

<body footer="nlfooter" footer-height="20pt" padding="20px 30px 20px 30px" size="A4">
	<#-- Include Header -->
	<#if tmplInclData?has_content && tmplInclData.header?has_content><#include "${tmplInclData.header}"></#if>
			
	<!--====== Start Entity Data ======-->
	<table style="width: 100%; margin-top: 10px;" align="${align}" class="${align}" direction="${direction}" lang="${pdfLang}">
		<tr>
			<td style="width:33.33%;" align="${align}" valign="top">
				<table>
					<#if record.shipaddress?has_content>
					<tr>
						<td>
							<b>${toCaption}</b>
							<br/>${record.shipaddress}
						</td>
					</tr>
					</#if>
				</table>
			</td>
			
			<td style="width:33.33%" align="center" valign="top">
				<table><tr>
					<#if phone?has_content || fax?has_content>
					<td>
						<b>${detailsCaption}</b>
						<table>
							<#if phone?has_content>
								<tr>
									<td>${getTranslatedLabel("record.entity.phone", "Phone")}:&nbsp;</td>
									<td style="white-space: nowrap;" lang="en" direction="ltr">${phone}</td>
								</tr>
							</#if>
							<#if fax?has_content>
								<tr>
									<td>${getTranslatedLabel("record.entity.fax", "Fax")}:&nbsp;</td>
									<td style="white-space: nowrap;" lang="en" direction="ltr">${fax}</td>
								</tr>
							</#if>						
						</table>
					</td>
					</#if>
				</tr></table>
			</td>
			
			<td style="width:33.33%" align="${oposAlign}" valign="top">
				<table><tr>
					<td>
						<b>${otherDetailsCaption}</b>
						<br/>${getTranslatedLabel("record.entity.date", "Date")}: ${tranDate}
						<#if salesorder?? && salesorder.otherrefnum?has_content><br/>${getTranslatedLabel("salesorder.otherrefnum", salesorder.otherrefnum@label)}: ${salesorder.otherrefnum}</#if>			
						<#if record.duedate?has_content><br/>${getTranslatedLabel("record.duedate", record.duedate@label)}: ${record.duedate}</#if>			
						<#if IS_IL_ENTITY && vatRegNum?has_content && vatRegNum != "999999999"><br/>${getTranslatedLabel("record.entity.vatregnumber", "Tax ID")}: ${vatRegNum}</#if>
					</td>
				</tr></table>
			</td>
			
		</tr>    
	</table>
	<!--====== End Entity Data ======-->

	<!--====== Start Transaction Status ======-->
	<table class="tranStatus" direction="${direction}" lang="${pdfLang}">
		<tr>
			<td style="width:33.3%" class="status-title" align="${align}">${getTranslatedLabel(tranIdLabelFldId, record@title)}</td>
			<td style="width:33.3%" align="center">${tranNumLblExpr} ${record.tranid}</td>
			<td style="width:33.3%" class="status-value" align="${oposAlign}">${getPrintStatusValue()}</td>
		</tr>
	</table>		
	<!--====== End Transaction Status ======-->
	
	
	<!--====== Start Items ======-->
	<#if record.item?has_content>
	<table class="itemtable" cellmargin="1px" style="margin-top: 10px;width:100%;" direction="${direction}" lang="${pdfLang}">
		<#list record.item as item>
			<#assign itemUnit = customUnitExpr>
			<#if item.units?has_content && UNIT_NAMES[item.units]??>
				<#assign itemUnit = UNIT_NAMES[item.units][pdfLang]>
			</#if>
			<#if !item.quantity?? || !item.quantity?has_content>
				<#assign itemUnit = "">
			</#if>
			
			<#if item_index==0>
			<thead>
				<tr>
					<th align="${align}" style="width:50%;">${getTranslatedLabel("item.displayname", item.item@label)}</th>
					<th align="${align}" style="width:16.67%;">${getTranslatedLabel("item.options", item.options@label)}</th>
					<th align="${align}" style="width:16.67%;">${getTranslatedLabel("item.units", item.units@label)}</th>
					<th align="center" style="width:16.67%;">${getTranslatedLabel("item.quantity", item.quantity@label)}</th>
				</tr>
			</thead>
			</#if>
			<tr>
				<td class="${align}"><span class="itemname">${item.item}</span><br />${item.description}</td>
				<td align="${align}">${item.options}</td>
				<td align="${align}">${itemUnit}</td>
				<td align="center">${item.quantity}</td>
			</tr>
		</#list>	
	</table>
	
	</#if>
	<!--====== End Items ======-->
	
	<#-- Include Body Fields -->
	<#if tmplInclData?has_content && tmplInclData.bodyfields?has_content><#include "${tmplInclData.bodyfields}"></#if>

	<!-- Start Entity Message -->
	<#if record.message?has_content>
		<#assign entityMessage = record.message?interpret>
		<br/><br/><table class="body_fields" style="width:100%" direction="${direction}" lang="${pdfLang}">
			<tr><td>
				<span style="text-decoration:underline;">${getTranslatedLabel("record.message", record.message@label)}:</span>
				<br/><@entityMessage/>
			</td></tr>
		</table>
	</#if>
	<!-- End Entity Message -->
	
	<!--====== Start Serial Numbers ======-->
	<#if hasColumnContent(record.item, "inventorydetail")>
	<table class="itemtable" cellmargin="1px" style="margin-top: 20px;" direction="${direction}" lang="${pdfLang}">
		<#list record.item as item>
			<#if item_index==0>
			<thead>
				<tr>
					<th style="width:50%;">${getTranslatedLabel("item.displayname", item.item@label)}</th>
					<th align="${align}" style="width:50%;">${getTranslatedLabel("item.serialnumber", "Serial Number")}</th>
				</tr>
			</thead>
			</#if>
			<tr>
				<td class="${align}"><span class="itemname">${item.item}</span></td>
				<td align="${align}">${item.inventorydetail}</td>
			</tr>
		</#list>	
	</table>
	</#if>	
	<!--====== End Serial Numbers ======-->
	
	<!-- Start Return Order -->
	<#if showReturnForm?? && showReturnForm && record.item?has_content>
		<hr style="margin-top:50px;"/>
		
		<table align="center" class="vaucher-form-title-wrapper" direction="${direction}" lang="${pdfLang}">
			<tr><td class="vaucher-form-title">${returnVaucher}</td></tr>
		</table>
		
		<table align="center" class="vaucher-form-table" direction="${direction}" lang="${pdfLang}">
			<tr>
				<th>${getTranslatedLabel("item.displayname", record.item[0].itemname@label)}</th>
				<th>${getTranslatedLabel("item.quantity", record.item[0].quantity@label)}</th>
				<th>${returnReason}</th>
			</tr>
			<#list 1..3 as x>
				<tr><td><br/></td><td><br/></td><td><br/></td></tr>
			</#list>
		</table>
	</#if>
	<!-- End Return Order -->
		
	<#-- Include Signature -->
	<#if tmplInclData?has_content && tmplInclData.sign?has_content><#include "${tmplInclData.sign}"></#if>

</body>
</pdf>